<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Title -->

    <!-- Choose Category (with ic_next) -->
    <TextView
        android:layout_width="380dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Choose a Content Category"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvChooseCategory"
        android:layout_width="380dp"
        android:layout_height="74dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_next"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="Select Category"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- Selected Category Display -->


    <!-- Article Title -->
    <EditText
        android:id="@+id/etArticleTitle"
        android:layout_width="378dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:hint="Article Title"
        android:inputType="textCapSentences" />

    <!-- Article Content -->
    <EditText
        android:id="@+id/etArticleContent"
        android:layout_width="378dp"
        android:layout_height="362dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Write your content here..."
        android:inputType="textMultiLine"
        android:minLines="5" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="18sp"

        android:textColor="@android:color/white"/>
</LinearLayout>