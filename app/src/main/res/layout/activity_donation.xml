<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">



    <!-- Descriptive Text TextView -->


    <!-- CardView for Premium Individual Plan -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64AF65"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row for Plan Name and Cost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <!-- Plan Name -->
                <TextView
                    android:id="@+id/planName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Donation and Fundraising"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Plan Cost -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/planAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARID"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/planDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mekelle Unicersity"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Donations and fundraising are vital components of our university's mission to provide quality education and support to students. Your contributions help us maintain and enhance our facilities."
                android:textSize="14sp" />

            <!-- Button -->

            <!-- Terms and Conditions -->
            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Together we can continue to make a significant impact on the lives of current and future students, ensuring they have the resources they need to succeed. Thank you for your generosity and support!"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>